 <% include ./layout/header %>


    
  <div class="row">
    
    <h1 class="page-header"><%= p.title %></h1>
    
    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= p._id %>/<%= p.image %>" alt="">
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%- p.desc %></p>
        <p>$<%= parseFloat(p.price).toFixed(2) %></p>
		<% if(log){ %>
		<p><a href="/cart/add/<%= p.title %>">Add to cart</a></p>
		<% } else { %>
		<h3>sign in</h3>
     <% } %>
		<h1><a target="_blank" href="/product/<%= p._id %>">wrtie review</a></h1>
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% for(var i= 0; i< g.length ; i++){ %>
            <% if (g[i] != "thumbs") { %>
            <li>
                <a data-fancybox="gallery" href="/product_images/<%= p._id %>/gallery/<%= g[i] %>">
                    <img src="/product_images/<%= p._id %>/gallery/thumbs/<%= g[i] %>" alt="">
                </a>
            </li>
            <% } %>
            <% } %>
        </ul>
    </div>
</div>
    




</div>
</div>
</div>


